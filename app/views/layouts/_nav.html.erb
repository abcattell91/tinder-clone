<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal">Tinder Clone</h5>

    <% if account_signed_in? %>
      <nav class="d-inline-flex my-2 my-md-0 mr-md-3 ms-md-auto">
      <%= link_to "Browse", browse_path, class: "btn btn-primary me-2 text-light text-decoration-none" %>
      <%= link_to "My Matches", "#", class: "btn btn-primary me-2 text-light text-decoration-none" %>
      <%= link_to "Settings", edit_account_registration_path, class: "btn btn-primary me-2 text-light text-decoration-none" %>
      </nav>

    <%= link_to "SIGN OUT", destroy_account_session_path, method: :delete, class: "btn btn-outline-secondary mx-2" %>

    <% else %>
      <nav class="d-inline-flex my-2 my-md-0 mr-md-3 ms-md-auto">
        <a class="me-3 py-2 text-dark text-decoration-none" href="#">Features</a>
        <a class="me-3 py-2 text-dark text-decoration-none" href="#">Pricing</a>
        <a class="me-3 py-2 text-dark text-decoration-none" href="#">Support</a>
      </nav>

    <%= link_to "Sign in", new_account_session_path, class: "btn btn-outline-secondary mx-2" %>
    <%= link_to "Sign up", new_account_registration_path, class: "btn btn-outline-primary" %>
    <% end %>
</div>
