<div class="row">
  <div class="col-12 top-bar">
    <i class="fa fa-times fa-2x float-end close-conversation"></i>
    <%= link_to image_tag(@profile.image.first, width: "40px", height: "40px", class: "float-start profile-thumb rounded-circle me-3"), "#" %>
    <p class="text-muted">You matched with <%= @profile.first_name %> on 12/11/2022</p>
  </div>
</div>
<div class="row">
  <div class="col-12 text-center">
    <p class="mt-3">You matched with <span><%= @profile.first_name %></span> <%= time_ago_in_words @profile.created_at %> ago.</p>
    <%= link_to image_tag(@profile.image.first, width: "200px", height: "200px", class: "profile-thumb rounded-circle mb-5 mt-2"), "#" %>
    <p>Send them a message and make them smile ðŸ˜Ž</p>
  </div>
</div>
<div class="row">
  <div class="col-12 mt-5 bottom-bar">
    <form>
      <div class="input-group">
        <input type="text" value="" placeholder="Enter your message and press send" class="form-control form-control-lg">
        <div class="input-group-append">
          <input type="submit" name="submit" value="Send" class="btn btn-success btn-lg pe-5 ps-5">
        </div>
      </div>
    </form>
  </div>
</div>
